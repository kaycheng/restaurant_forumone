<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><%= @restaurant.name %></h3>
      <p><%= @restaurant.category.name %></p>
      <div class="col-md-4">
        <%= image_tag @restaurant.image, class: "img-responsive block-center" if @restaurant.image? %>
        <br> 
        <div class="well">
          <ul class="list-unstyled">
            <li><strong>Tel: </strong><%= @restaurant.tel %></li>
            <li><strong>Opening Hours: </strong><%= @restaurant.opening_hours %></li>
            <li><strong>Address: </strong><%= @restaurant.address %></li>
          </ul>
        </div>
      </div>
      <div class="col-md-8">
        <%= simple_format @restaurant.description %>
      </div>
    </div>
    <div class="clearfix"></div>
    <hr>
  </div>
  <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
</div>